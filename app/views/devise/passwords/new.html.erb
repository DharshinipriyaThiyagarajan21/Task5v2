<div class="container-fluid">
	<div class="container indexContainer">
		<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">
				<div class="header">
					<h1 class="forgot-h1">Forgot your password?</h1>
				</div>
				<form action="/users/password"  method="post"><input name="utf8" type="hidden" value="✓">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		 
				  	<div class="form-group">
				  		<input type="email" class="form-control" name="user[email]">
				  	</div>

				  	<div class="reset-btn">
						<input type="submit" name="commit" class="btn btn-default form-control" value="Request reset link">
				  	</div>

				  	<div class="row">
	            	<div class="col-md-2"></div>
	            	<div class="col-md-4">
	                 <input type="button" class="btn btn-default defaultButtonsIndex" onclick="location.href='/users/sign_in'" value="Login" />
	             	</div>
	             	<div class="col-md-4">
	                 <input type="button" class="btn btn-default defaultButtonsIndex" onclick="location.href='/users/sign_up'" value="Sign Up" />
	             	</div>
	             	<div class="clearfix"></div>
	         	</div>
				</form>

			</div>
			<div class="col-md-4"></div>
		</div>
	</div>
</div>

